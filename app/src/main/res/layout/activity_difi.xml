<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocfg2"
    tools:context="com.example.germnrojo.pictoproject.difi">

    <ImageButton
        android:id="@+id/botonBack"
        android:layout_width="213dp"
        android:layout_height="171dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:padding="30dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/back"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="1130dp"
        android:layout_height="690dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:padding="1dp"
        android:paddingRight="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.28">

        <ImageButton
            android:id="@+id/botdif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/selecdif" />

        <ImageButton
            android:id="@+id/botplus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/agregaror" />

        <ImageButton
            android:id="@+id/botminus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/eliminaror" />

        <ImageButton
            android:id="@+id/botsound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="0dp"
            android:paddingTop="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sonido1" />

        <ImageButton
            android:id="@+id/botacerca"
            android:layout_width="1083dp"
            android:layout_height="181dp"
            android:background="@null"
            android:paddingLeft="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/acercade2"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
